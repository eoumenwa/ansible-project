pipeline {
    agent any
    stages {
        stage("Initial cleanup") {
          steps {
            dir("${WORKSPACE}") {
              deleteDir()
            }
          }
        }
        stage('SCM Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/eoumenwa/ansible-project.git'
            }
        }
        stage('Execute Ansible') {
            steps {
                ansiblePlaybook credentialsId: 'private-key', disableHostKeyChecking: true, installation: 'ansible', inventory: '${inventory}', playbook: 'playbooks/nginx.yml'
            }
        }
    }
}
