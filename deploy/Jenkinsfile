pipeline {
    agent any
    
    parameters {
      string(name: 'inventory', defaultValue: 'dev',  description: 'This is the inventory file for the environment to deploy configuration')
    }
   
    stages {
        stage('SCM Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/eoumenwa/ansible-project.git'
            }
        }
        stage('Execute Ansible') {
            steps {
                ansiblePlaybook credentialsId: 'private-key', disableHostKeyChecking: true, installation: 'ansible', inventory: '${inventory}', playbook: 'playbooks/site.yml'
            }
        }
    }
}
